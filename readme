  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://www.google.com/recaptcha/api.js?render=6Ld2EDUrAAAAABDQw6QwvVibbXe6B8jHrRfn25Pg"></script>
  <script>
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('show-up');
      }
    });
  });

  document.querySelectorAll('.fade-up').forEach(el => observer.observe(el));
  
  
  document.getElementById("newsLetterParentChoice").addEventListener("click", onClickParentChoice);
  function onClickParentChoice() {
    document.getElementById('newsLetterParentRadio').checked = true;
	document.getElementById("newsLetterParentChoice").classList.add("active");
	document.getElementById("newsLetterPlayerChoice").classList.remove("active");
	
	document.getElementById("newsLetterPlayerChoice").classList.add("inactive");
	document.getElementById("newsLetterParentChoice").classList.remove("inactive");
  }
  
  document.getElementById("newsLetterPlayerChoice").addEventListener("click", onClickPlayerChoice);
  function onClickPlayerChoice() {
    document.getElementById('newsLetterPlayerRadio').checked = true;
	document.getElementById("newsLetterParentChoice").classList.remove("active");
	document.getElementById("newsLetterPlayerChoice").classList.add("active");
	
	document.getElementById("newsLetterPlayerChoice").classList.remove("inactive");
	document.getElementById("newsLetterParentChoice").classList.add("inactive");
  }
  
  
  // newsletter form
  $(document).ready(function(){
		$( "#newsletterSubmit" ).click(onClickSubmit);
		
		gotoHash(location.hash);
		$('a[href*="#"]').on('click', function() {
		  gotoHash("#"+$(this).attr('href').split("#")[1]);
		});
	});

	function onClickSubmit(e) {
		e.preventDefault();
		$( "#newsletterSubmit" ).prop('disabled', true);
		$( "#newsletterSubmit" ).hide();
		$("#newsletterFormLoading").show();
		$("#newsletterFormErrorAlert").removeClass("show");
		grecaptcha.ready(function() {
			grecaptcha.execute('6Ld2EDUrAAAAABDQw6QwvVibbXe6B8jHrRfn25Pg', {action: 'submit'}).then(function(token) {
				$("#g-recaptcha-response").val(token);
				submitForm();
			});
		});
	}

	function submitForm()
	{
		var form = new FormData($("#newsletterForm")[0]);
		$.ajax({
				url: "/api/client/web/newsletter/submit",
				method: "POST",
				data: form,
				processData: false,
				contentType: false,
				success: function(result)
				{
					$("#newsletterFormLoading").hide();
					
					var obj = JSON.parse(result);
					if(obj.hasOwnProperty('1'))
					{
						$("#newsletterFormFields1").hide();
						$("#newsletterFormFields2").hide();
						$("#newsletterFormSuccessAlert").addClass("show");
						$("#newsletterFormErrorAlert").removeClass("show");
						$("#newsletterFormSuccessAlert").html(obj["0"]);
					}else
					{
						$("#newsletterFormErrorAlert").addClass("show");
						$("#newsletterFormErrorAlert").html(obj["0"]);
						$("#newsletterSubmit").prop('disabled', false);
						$("#newsletterSubmit").show();
					}
				},
				error: function(er){}
		});
	}
  
  
function gotoHash(id) {
  setTimeout(function() {
    console.log("gotoHash:", id);

    var $target = $(id);
    if (!$target.length) {
      return;
    }

    var offset = $target.offset();
    if (!offset) {
      return;
    }

    var scrollOffset = 100;
    var y = offset.top - scrollOffset;

    window.scrollTo(0, y);
  }, 0);
}
</script>
<script>
  const targetDate = new Date("2026-04-11T20:30:00Z"); // 15:30 EST = 20:30 UTC

  function updateCountdown() {
    const now = new Date();
    const diff = targetDate - now;

    if (diff <= 0) {
      document.getElementById("openingCountdownDays").textContent = "0";
      document.getElementById("openingCountdownHours").textContent = "0";
      document.getElementById("openingCountdownMinutes").textContent = "0";
      document.getElementById("openingCountdownSeconds").textContent = "0";
      clearInterval(interval);
      return;
    }

    const days = Math.floor(diff / (1000 * 60 * 60 * 24));
    const hours = Math.floor((diff / (1000 * 60 * 60)) % 24);
    const minutes = Math.floor((diff / (1000 * 60)) % 60);
    const seconds = Math.floor((diff / 1000) % 60);

    document.getElementById("openingCountdownDays").textContent = days;
    document.getElementById("openingCountdownHours").textContent = hours;
    document.getElementById("openingCountdownMinutes").textContent = minutes;
    document.getElementById("openingCountdownSeconds").textContent = seconds;
  }

  updateCountdown();

  const interval = setInterval(updateCountdown, 1000);
</script>
</body>
</html>
